# LUSUSH Configuration File
# This file configures the behavior of the lusush shell
# Lines starting with # are comments

[history]
history_enabled = true
history_size = 1000
history_no_dups = true
history_timestamps = false
# history_file = ~/.lusush_history

[completion]
completion_enabled = true
fuzzy_completion = true
completion_threshold = 60
completion_case_sensitive = false
completion_show_all = false

[prompt]
prompt_style = git
prompt_theme = default
git_prompt_enabled = true
git_cache_timeout = 5
# prompt_format = "%u@%h in %d%g %% "

[behavior]
multiline_edit = true
auto_cd = false
spell_correction = false
confirm_exit = false
tab_width = 4
color_scheme = default
colors_enabled = true
verbose_errors = false
debug_mode = false

[aliases]
# Define custom aliases here
# ll = ls -l
# la = ls -la

[keys]
# Custom key bindings (future feature)
# ctrl-r = reverse-search
